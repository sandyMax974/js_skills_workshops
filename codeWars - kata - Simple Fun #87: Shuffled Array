sum array 
divide by 2
store that in varX
find indexOf varX
remove varX using arr.splice()
use compare and sort the array

//sudocode
function xyz (array) {
	let arrSum = array.reduce((acc, current) => {
		return acc + current
		} 
	let valRemove = arrSum / 2
	let indexValRemove = array.indexof('valRemove')
	array.splice(indexValRemove, 1)
	return array.sort()
} 

//draft code
function shuffledArray(shuffled) {
  let summedArr = shuffled.reduce((acc, current) => {
    return acc += current
  })
  let valToRemove = summedArr /2
  let indexValToRemove = shuffled.indexOf(valToRemove)
  console.log(indexValToRemove)
  let newArr = shuffled.splice(indexValToRemove, 1).sort()
  return newArr
}

shuffledArray([1, 12, 3, 6, 2])
