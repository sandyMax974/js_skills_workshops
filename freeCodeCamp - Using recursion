//use recursion to generate a countdown
let myArray = []
function countdown(myArray, n){
  if (n <= 0) {
    return myArray[0];
  } else {
    countdown(myArray, n -1);
    myArray.unshift(n);
    return myArray;
  }
}

//use recursion to generate a range of number
function rangeOfNumbers(startNum, endNum) {
  if (endNum === startNum) {
    return [startNum];
  } else {
    var numbers = rangeOfNumbers(startNum, endNum - 1);
    numbers.push(endNum);
    return numbers;
}};
